<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>


<VBox spacing="10.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.dolinskm.rej006.views.PlotViewController">
   <children>
      <HBox spacing="10.0">
         <children>
            <ComboBox fx:id="cbxPlotMode" minWidth="96.0" />
            <Button fx:id="btnStart" mnemonicParsing="false" onAction="#onStartClicked" text="Start" />
            <Button fx:id="btnStop" mnemonicParsing="false" onAction="#onStopClicked" text="Stop" />
            <ToggleButton fx:id="tglCursorsX" mnemonicParsing="false" onAction="#onCursorsXToggled" text="Kursory X" />
            <ToggleButton fx:id="tglCursorsY" mnemonicParsing="false" onAction="#onCursorsYToggled" text="Kursory Y" />
         </children>
      </HBox>
      <HBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="200.0" spacing="10.0" VBox.vgrow="ALWAYS">
         <children>
            <Region style="-fx-background-color: #ccc;" HBox.hgrow="ALWAYS" />
            <Region minWidth="100.0" style="-fx-background-color: ccc;" />
         </children>
      </HBox>
      <HBox maxWidth="1.7976931348623157E308" spacing="10.0">
         <children>
            <Region minHeight="50.0" style="-fx-background-color: ccc;" HBox.hgrow="ALWAYS" />
         </children>
      </HBox>
      <fx:include fx:id="backPane" source="../controls/back-pane.fxml"/>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
